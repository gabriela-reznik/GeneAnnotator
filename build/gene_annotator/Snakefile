rule all:
    input: "gene_annotator/csv_filtered_data.csv"
    input: "gene_annotator/json_filtered_data.json"

rule run_vep:
    input: vcf = "gene_annotator/NIST.vcf"
    output: file = "gene_annotator/annotated_NIST.vcf" 
    params: vep = "--assembly GRCh37 --fork 4 --cache --offline --dir_cache /gene_annotator/vep_cache/ --af --vcf --no_stats --fields AF,Gene,SYMBOL,Existing_variation,AF"
    shell: "/opt/vep/src/ensembl-vep/vep -i {input.vcf} {params.vep} -o {output.file}"

rule parse_annotation:
    input: file = "gene_annotator/annotated_NIST.vcf" 
    output: file = "gene_annotator/parsed_annotation.csv" 
    shell: "python3 gene_annotator/annotator_parser/annotator_parser.py {input.file} {output.file}"

rule run_API:
    input: file = "gene_annotator/parsed_annotation.csv" 
    output: csv = "gene_annotator/csv_filtered_data.csv",
            json = "gene_annotator/filtered_data_dict.json"
    shell: "python3 gene_annotator/API.py {input.file}"
